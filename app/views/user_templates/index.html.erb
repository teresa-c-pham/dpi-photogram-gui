<h1>
  List of users
</h1>

<hr>

<form action="/insert_user" method="post">
  <label for="title_box">
    Username
  </label>

  <input type="text" id="title_box" name="query_username" placeholder="Enter a username...">

  <button>
    Add user
  </button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Username
    </th>

    <th>
    </th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.id %>
    </td>

    <td>
      <%= user.username %>
    </td>

    <td>
      <a href="/users/<%= user.username %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
